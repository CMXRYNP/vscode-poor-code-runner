{
	"name": "poor-code-runner",
	"displayName": "Poor Code Runner",
	"description": "",
	"version": "0.0.3",
	"publisher": "cekavis",
	"repository": {
		"type": "git",
		"url": "https://github.com/Cekavis/vscode-poor-code-runner.git"
	},
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.compile",
				"title": "Compile C++ file"
			},
			{
				"command": "extension.run",
				"title": "Run corresponding executable"
			},
			{
				"command": "extension.compileRun",
				"title": "Compile and run"
			},
			{
				"command": "extension.testTime",
				"title": "Test excutable running time"
			},
			{
				"command": "extension.fetchSamples",
				"title": "Fetch samples on Codeforces"
			},
			{
				"command": "extension.batchTest",
				"title": "Test all samples on Codeforces"
			},
			{
				"command": "extension.killTimeTest",
				"title": "Kill running time test"
			}
		],
		"keybindings": [
			{
				"command": "extension.compile",
				"key": "f9",
				"when": "editorTextFocus && editorLangId == cpp"
			},
			{
				"command": "extension.run",
				"key": "f10",
				"when": "editorTextFocus && editorLangId == cpp"
			},
			{
				"command": "extension.compileRun",
				"key": "f11",
				"when": "editorTextFocus && editorLangId == cpp"
			},
			{
				"command": "extension.testTime",
				"key": "Ctrl+f9",
				"when": "editorTextFocus && editorLangId == cpp"
			},
			{
				"command": "extension.batchTest",
				"key": "Ctrl+f10",
				"when": "editorTextFocus && editorLangId == cpp"
			},
			{
				"command": "extension.killTimeTest",
				"key": "Ctrl+f11",
				"when": "editorTextFocus && editorLangId == cpp"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Poor Code Runner configuration",
			"properties": {
				"poor-code-runner.compilerFlags": {
					"type": "string",
					"default": "-Wall -O2 -std=c++11 \"-Wl,--stack=998244353\"",
					"description": "Compiler flags for g++"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.16",
		"@types/superagent": "^4.1.7",
		"cheerio": "^1.0.0-rc.3",
		"superagent": "^5.2.2"
	}
}
